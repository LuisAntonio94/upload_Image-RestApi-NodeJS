{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"quotes": "error", // Se soluciona por prettier
		"semi": "error", // Se soluciona por prettier
		"no-console": "off", // off para que pase limpio Lint
		"linebreak-style": "off",
		"indent": "off",
		"no-tabs": "off",
		"import/no-unresolved": "off",
		"import/extensions": "off",
		"import/prefer-default-export": "off"
	}
}
